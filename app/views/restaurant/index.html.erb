<div class="container p-3" >
  <%= render '/share/top_button' %>
  <div class="row justify-content-around" style="text-align:center">
    <% @restaurants.each do |restaurant| %>
      <div class="col-sm-3 m-2" >
        <div class="card" style="width:120%;">
            <%= image_tag(restaurant.picURL, {:style => "width:80%;margin:10px auto 0 auto;border-radius:5px;"})%>
          <div class="card-body">
           <h5 class="card-title"><strong><%= restaurant.name %></strong></h5>
            <p class="card-text"><%= restaurant.city %></p>
            <p class="card-text"><%= restaurant.address %></p>
            <p class="card-text"><%= restaurant.tel %></p>
            
            <%= link_to '瞭解更多', restaurant,  { :class=>"btn btn-outline-info" } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
   <%= paginate @restaurants, outer_window: 3 %>
</div>
 
 

</div>